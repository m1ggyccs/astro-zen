---
import type { HeroProps } from "@types";
type Props = HeroProps;

const { name, specialty, summary, email, resumeLink } = Astro.props;
---

<section class="py-24 md:py-32" id="#hero">
  <h1
    class="mb-1.5 font-serif text-7xl font-bold tracking-tightest text-white sm:text-8xl md:mb-0 md:text-9xl"
  >
    {name}
  </h1>
  <p
    class="mb-9 font-serif text-4xl leading-[46px] font-bold tracking-tighter text-primary sm:text-5xl md:text-6xl"
  >
    {specialty}
  </p>
  <p class="mb-16 text-base font-normal text-neutral md:text-lg">
    {summary}
  </p>

  <div class="flex flex-col gap-4 sm:flex-row sm:gap-6">
    <!-- Primary CTA - Get in Touch -->
    <a
      class="inline-block rounded-full bg-primary px-8 py-5 text-sm leading-5 font-medium text-white text-center transition-colors hover:bg-primary/90"
      href={`mailto:${email}`}
    >
      Get in Touch
    </a>
    
    <!-- Secondary CTA - Resume -->
    {resumeLink && (
      <a
        class="inline-block rounded-full border-2 border-primary bg-transparent px-8 py-5 text-sm leading-5 font-medium text-primary text-center transition-colors hover:bg-primary/10"
        href={resumeLink}
        target="_blank"
        rel="noopener noreferrer"
      >
        Resume
      </a>
    )}
  </div>
</section>
